{
  "publisher": "slipwayhq",
  "name": "weather_transformer",
  "description": "Transforms weather data from various providers into a standard format.",
  "version": "0.0.1",
  "input": {
    "properties": {
      "provider": {
        "enum": [
          "yahoo",
          "met"
        ]
      },
      "data": {
        "values": {}
      }
    }
  },
  "output": {
    "properties": {
      "temperature": {
        "metadata": {
          "description": "The temperature in degrees Celsius."
        },
        "type": "number"
      },
      "humidity": {
        "metadata": {
          "description": "The relative humidity as a percentage."
        },
        "type": "number"
      }
    }
  }
}