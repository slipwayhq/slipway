{
  "publisher": "slipwayhq",
  "name": "weather_renderer",
  "version": "0.0.1",
  "description": "Renders weather data into an image.",
  "input": {
    "properties": {
      "temperature": {
        "metadata": {
          "description": "The temperature in degrees Celsius."
        },
        "type": "number"
      },
      "humidity": {
        "metadata": {
          "description": "The relative humidity as a percentage."
        },
        "type": "number"
      }
    }
  },
  "output": {
    "properties": {
      "image": {
        "metadata": {
          "description": "The image data.",
          "format": "base64"
        },
        "type": "string"
      }
    }
  }
}