{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "enum": ["increment", "panic", "stderr"]
    }
  },
  "oneOf": [
    {
      "properties": {
        "type": { "const": "increment" },
        "value": { "type": "integer" }
      },
      "required": ["type", "value"],
      "additionalProperties": false
    },
    {
      "properties": {
        "type": { "const": "panic" }
      },
      "required": ["type"],
      "additionalProperties": false
    },
    {
      "properties": {
        "type": { "const": "stderr" }
      },
      "required": ["type"],
      "additionalProperties": false
    }
  ],
  "discriminator": {
    "propertyName": "type"
  }
}