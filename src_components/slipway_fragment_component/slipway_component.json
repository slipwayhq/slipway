{
  "publisher": "slipway",
  "name": "fragment",
  "description": "A simple fragment component that increments one extra time.",
  "version": "0.0.1",
  "input": {
    "discriminator": "type",
    "mapping": {
      "increment": {
        "properties": {
          "value": {
            "type": "int32"
          }
        }
      },
      "callout_increment": {
        "properties": {
          "value": {
            "type": "int32"
          },
          "ttl": {
            "type": "uint32"
          },
          "result_type": {
            "enum": ["increment", "panic", "error"]
          }
        },
        "optionalProperties": {
          "handle": {
            "type": "string"
          }
        }
      },
      "invalid_callout_input": {},
      "invalid_callout_output": {},
      "invalid_output": {},
      "panic": {},
      "error": {}
    }
  },
  "output": {
    "properties": {
      "value": {
        "type": "int32"
      }
    }
  },
  "rigging": {
    "first": {
      "component": "file:slipway.test.0.0.1",
      "input": "$$.input",
      "allow": [
        { "permission": "local_component", "exact": "file:slipway.test.0.0.1" }
      ]
    },
    "output": {
      "component": "file:slipway.test.0.0.1",
      "input": {
        "type": "increment",
        "value": "$$.first.value"
      }
    }
  }
}